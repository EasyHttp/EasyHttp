<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Build">
  <PropertyGroup>
    <ProjectFolder>..\src\</ProjectFolder>
    <MSpec>..\src\packages\mspec\mspec.exe</MSpec>
  </PropertyGroup>
  <Target Name="Build">

    <MSBuild Projects="$(ProjectFolder)\EasyHttp.sln"/>
  </Target>

  <Target Name="TeamCity" DependsOnTargets="Build">
    <Exec Command="$(mspec) ..\src\EasyHttp.Specs\bin\debug\EasyHttp.Specs.dll --teamcity"/>
    <TeamCityProgressMessage Text="##teamcity[dotNetCoverage key='dotCover']" />

    <TeamCityProgressMessage Text="##teamcity[importData type='dotNetCoverage' tool='dotCover' path='dotCover.xml'"/>
    
  </Target>

</Project>